<h1>Contact page</h1>

{{#if responseMessage}}
<div class="alert alert-success">{{responseMessage}}</div> 
{{/if}}

<div class="form-horizontal form-group form-group-lg row">
	<div id="divInput" class= "col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md5 col-md-offset-2 {{inputClass}}">
		{{input type="email" value=emailAddress2 class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
	</div>
	<div id="divTextarea" class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md5 col-md-offset-2 {{textAreaClass}}">
		{{textarea id="contactTextarea" class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
	</div>
	<div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
		<button id="contactButton" disabled={{isValid}} {{action 'sendMessage'}} class="btn btn-primary btn-lg btn-block">Send message</button>
	</div>
</div>
